<!DOCTYPE html>
<html>
<head>
  <title>DailyTracker</title>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">Daily Tracker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to("Home", root_path, class: "btn btn-default", style: "color:white")%>
            </li>
          </ul>
            <% if user_signed_in? %>
          <li>
            <%= link_to('Edit registration', edit_user_registration_path, { :style=>'color:#FFFFFF;', :class => 'btn btn-primary' }) %>
          </li>
            <% else %>
          <li>
            <%= link_to('Register', new_user_registration_path, { :style=>'color:#FFFFFF;', :class => 'btn btn-success' })  %>
          </li>
            <% end %>
          <form class="form-inline mt-2 mt-md-0">
            <% if user_signed_in? %>
            <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, :style=>'color:#FFFFFF;', :class => 'btn btn-danger') %>        
            </li>
            <% else %>
            <li>
            <%= link_to('Login', new_user_session_path, { :style=>'color:#FFFFFF;', :class => 'btn btn-success' })  %>  
            </li>
            <% end %>
          </form>
        </div>
      </nav>
<div class="container" style="text-align:center">
    </br>
    </br>
    </br>
    </br>
    </br>
    <%= yield %>
<div>

</body>
</html>
